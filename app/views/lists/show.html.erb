<h1> <%= @list.name %></h1>

<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.association :movie, collection: Movie.all %>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>

<ul>
  <% @list.movies.each do |movie| %>
  <li> <h3> <%= movie.title %> </h3>
  <p> <%= Bookmark.find_by({ list:@list, movie:movie }).comment %> </p>
  <%# <> <%= Movie.find_by({ list:@list, movie:movie }).poster_url %>
  <%= image_tag movie.poster_url, style:"height: 200px" %>
  </li>
  <% end %>
</ul>


<p> <%= link_to "<- Back", lists_path %> </p>
